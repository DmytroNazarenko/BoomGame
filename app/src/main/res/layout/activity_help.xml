<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ПРАВИЛА ИГРЫ"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff7043"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/button10"
            android:background="@drawable/roundshapebtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rules2"
            android:id="@+id/textView7"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/button10"
            android:layout_toEndOf="@+id/button10"
            android:textColor="#424242"
            android:textSize="15dp"
            android:layout_marginLeft="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp" >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/button11"
            android:background="@drawable/roundshapebtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rules3"
            android:id="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/button11"
            android:layout_toEndOf="@+id/button11"
            android:textColor="#424242"
            android:textSize="15dp"
            android:layout_marginLeft="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp" >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/button12"
            android:background="@drawable/roundshapebtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rules4"
            android:id="@+id/textView9"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/button12"
            android:layout_toEndOf="@+id/button12"
            android:textColor="#424242"
            android:textSize="15dp"
            android:layout_marginLeft="15dp" />
    </RelativeLayout>

</LinearLayout>